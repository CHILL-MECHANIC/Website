{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/auth.ts": {
      "maxDuration": 10
    },
    "api/payment.ts": {
      "maxDuration": 10
    },
    "api/profile.ts": {
      "maxDuration": 10
    },
    "api/booking/create.ts": {
      "maxDuration": 10
    },
    "api/admin/booking.ts": {
      "maxDuration": 10
    },
    "api/admin/bookings/index.ts": {
      "maxDuration": 10
    },
    "api/admin/customers/index.ts": {
      "maxDuration": 10
    },
    "api/admin/services/index.ts": {
      "maxDuration": 10
    },
    "api/admin/stats.ts": {
      "maxDuration": 10
    },
    "api/admin/technicians/index.ts": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/services/ac", "destination": "/services/ac.html" },
    { "source": "/services/refrigerator", "destination": "/services/refrigerator.html" },
    { "source": "/services/ro", "destination": "/services/ro.html" },
    { "source": "/services/geyser", "destination": "/services/geyser.html" },
    { "source": "/services/washing-machine", "destination": "/services/washing-machine.html" },
    { "source": "/services/microwave", "destination": "/services/microwave.html" },
    { "source": "/services/water-dispenser", "destination": "/services/water-dispenser.html" },
    { "source": "/services/deep-freezer", "destination": "/services/deep-freezer.html" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!services/).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    },
    {
      "source": "/",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
